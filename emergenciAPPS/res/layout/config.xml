<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    tools:context="com.example.tarjetascredito.MainActivity"
    tools:ignore="MergeRootFrame" 
    android:id="@+id/scroll"
    
    > 
	<RelativeLayout 
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="#000">
    
   
       <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favoritos"
        android:layout_centerHorizontal="true"
        android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />
       <View
            android:id="@+id/separador0"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
			android:background="@drawable/separador"
			android:layout_below="@+id/textView1"
			android:layout_width="wrap_content"
			android:layout_height="1dp">
		</View>
       
       <TextView
        android:id="@+id/textView2"
        android:textColor="#FFF"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/separador0"
        android:layout_height="wrap_content"
        android:text="@string/numeroBombero"
       
         />
       
        <EditText
           android:id="@+id/editText1"
           android:layout_centerHorizontal="true"
           android:layout_width="300dp"
           android:layout_height="25dp"
           android:layout_below="@+id/textView2"
           android:background="@drawable/editredondos"
           android:inputType="number"
         >
        </EditText>
        
        <TextView
	        android:id="@+id/textView3"
	        android:paddingTop="10dp"
	        android:paddingLeft="10dp"
	        android:layout_width="wrap_content"
	        android:textSize="18sp"
	        android:layout_below="@+id/editText1"
	        android:layout_height="wrap_content"
	        android:text="@string/numeroCarabinero"
	       android:textColor="#FFF"
         />
        <EditText
           android:id="@+id/editText2"
           android:layout_centerHorizontal="true"
           android:layout_width="300dp"
           android:layout_height="25dp"
           android:layout_below="@+id/textView3"
           android:background="@drawable/editredondos"
           android:inputType="number"
         >
        </EditText>
        
        <TextView
	        android:id="@+id/textView4"
	        android:paddingLeft="10dp"
	        android:paddingTop="10dp"
	        android:layout_width="wrap_content"
	        android:textSize="18sp"
	        android:layout_below="@+id/editText2"
	        android:layout_height="wrap_content"
	        android:text="@string/numeroHospital"
	        android:textColor="#FFF"
         />
        <EditText
           android:id="@+id/editText3"
           android:layout_centerHorizontal="true"
           android:layout_width="300dp"
           android:layout_height="25dp"
           android:layout_below="@+id/textView4"
           android:background="@drawable/editredondos"
           android:inputType="number"
         >
        </EditText>
        
         <TextView
        android:id="@+id/textView100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/datos"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText3"
        android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />
         
        <View
            android:id="@+id/separador1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
			android:background="@drawable/separador"
			android:layout_below="@+id/textView100"
			android:layout_width="wrap_content"
			android:layout_height="1dp">
		</View>
		<TextView
	        android:id="@+id/textView50"
	        android:paddingLeft="10dp"
	       	android:paddingTop="5dp"
	        android:layout_width="wrap_content"
	        android:textSize="18sp"
	        android:layout_below="@+id/separador1"
	        android:layout_height="wrap_content"
	        android:text="@string/nombreUser"
	        android:textColor="#FFF"
         />
		<EditText
           android:id="@+id/editText40"
           android:layout_centerHorizontal="true"
           android:layout_width="300dp"
           android:layout_height="25dp"
           android:layout_below="@+id/textView50"
           android:background="@drawable/editredondos"
           android:inputType="text"
         >
         </EditText>
         <TextView
	        android:id="@+id/textView60"
	        android:paddingLeft="10dp"
	        android:paddingTop="10dp"
	        android:layout_width="wrap_content"
	        android:textSize="18sp"
	        android:layout_below="@+id/editText40"
	        android:layout_height="wrap_content"
	        android:text="@string/fonoUser"
	        android:textColor="#FFF"
         />
		<EditText
           android:id="@+id/editText50"
           android:layout_centerHorizontal="true"
           android:layout_width="300dp"
           android:layout_height="25dp"
           android:layout_below="@+id/textView60"
           android:background="@drawable/editredondos"
           android:inputType="number"
         >
        </EditText>
		<TextView
	        android:id="@+id/textView5"
	        android:paddingLeft="10dp"
	        android:paddingTop="10dp"
	        android:layout_width="wrap_content"
	        android:textSize="18sp"
	        android:layout_below="@+id/editText50"
	        android:layout_height="wrap_content"
	        android:text="@string/correoFavorito"
	        android:textColor="#FFF"
         />
		<EditText
           android:id="@+id/editText4"
           android:layout_centerHorizontal="true"
           android:layout_width="300dp"
           android:layout_height="25dp"
           android:layout_below="@+id/textView5"
           android:background="@drawable/editredondos"
           android:inputType="textEmailAddress" >

        </EditText>
        <TextView
	        android:id="@+id/textView6"
	        android:paddingLeft="10dp"
	        android:paddingTop="10dp"
	        android:layout_width="wrap_content"
	        android:textSize="18sp"
	        android:layout_below="@+id/editText4"
	        android:layout_height="wrap_content"
	        android:text="@string/mensajeAlerta"
	        android:textColor="#FFF"
         />
        <EditText
           android:id="@+id/editText5"
           android:layout_centerHorizontal="true"
           android:layout_height="60dp"
           android:scrollbars="vertical"
           android:layout_width="300dp"
           android:maxLength="50"
           android:lines="5"
           android:layout_below="@+id/textView6"
           android:background="@drawable/editredondos"
           android:inputType="text"
         >
        </EditText>
        
       
        <View
            android:id="@+id/separador2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
			android:background="@drawable/separador"
			android:layout_below="@+id/editText5"
			android:layout_width="wrap_content"
			android:layout_height="1dp">
		</View>
		<TextView
	        android:id="@+id/textView7"
	        android:paddingLeft="10dp"
	        android:paddingTop="10dp"
	        android:layout_width="wrap_content"
	        android:textSize="20sp"
	        android:layout_below="@+id/separador2"
	        android:layout_height="wrap_content"
	        android:text="@string/radioCobertura"
	        android:textColor="#FFF"
         />
		<SeekBar
            android:id="@+id/volume_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:progress="0"
            android:max="100"
            android:layout_below="@+id/textView7"
             android:progressDrawable="@drawable/progressbar"
            android:secondaryProgress="0" />
		<LinearLayout
            android:layout_width="fill_parent"
            android:id="@+id/numerosProgreso"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/volume_bar"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="15" >
 
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
 
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:text="5"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
 
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:text="10"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
 
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:text="15"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
 
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:text="20"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
 
            
        </LinearLayout>
		<View
            android:id="@+id/separador3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
			android:background="@drawable/separador"
			android:layout_below="@+id/numerosProgreso"
			android:layout_width="wrap_content"
			android:layout_height="1dp">
		</View>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="120dp" 
            android:layout_height="wrap_content"
            android:layout_below="@+id/separador3"
            android:layout_centerHorizontal="true"
            android:background="@drawable/botonbotonpulsado"
            android:padding="5dp"
            android:drawableRight="@drawable/botonguardarpulsado"
            android:text="@string/guardar" />

	</RelativeLayout>
</ScrollView>
