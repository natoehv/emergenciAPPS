
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:layout_gravity="right"
        android:id="@+id/llamar134"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:background="@drawable/llamarpdi" />
    
    <ScrollView 
	    android:id="@+id/scroll"
	    android:layout_width="match_parent" 
	    android:layout_height="match_parent">
	    
		    <RelativeLayout 
		        android:id="@+id/relative"
			    android:layout_width="fill_parent"
			    android:layout_height="100dp"
			    android:background="#38276F" >
			    
		    	<RelativeLayout 
			        android:id="@+id/relative1"
				    android:layout_width="fill_parent"
				    android:layout_height="40dp" >
				    
				    <TextView
				        android:id="@+id/numero"
				        android:layout_width="wrap_content"
				        android:layout_height="80dp"
				        android:layout_alignParentLeft="true"
				        android:layout_alignParentTop="true"
				        android:textColor="#7B5FD8"
				        android:layout_marginTop="10dp"
				        android:layout_marginLeft="17dp"
				        android:text="@string/numeroCabecera" />
				        
				    <TextView
				        android:id="@+id/direccion"
				        android:layout_width="wrap_content"
				        android:layout_height="80dp"
				        android:layout_alignParentTop="true"
				        android:layout_centerHorizontal="true"
				        android:layout_marginTop="10dp"
				        android:textColor="#7B5FD8"
				        android:text="@string/direccionCabecera" />
				    
			    </RelativeLayout>
			    
			    <View
		            android:id="@+id/separador"
		            android:background="@drawable/separador_lista_pdi"
					android:layout_below="@+id/relative1"
					android:layout_width="wrap_content"
					android:layout_height="2dp">
				</View>
			    
			    <RelativeLayout 
			        android:id="@+id/relative2"
			        android:layout_below="@+id/separador"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent" >
				    
				    <ListView 
					    android:id="@+id/listaNroPdi"
					    android:layout_width="match_parent"
						android:layout_height="100dp">
					</ListView>
					
				</RelativeLayout>  
				
			 </RelativeLayout>
			
		</ScrollView>
	
    
    
    
    
    
    
    
    
    
	<com.mapquest.android.maps.MapView
	    android:id="@+id/mapPdi"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:clickable="true"
	    android:enabled="true"
	    android:apiKey="Fmjtd%7Cluur2g0bn0%2Cb0%3Do5-9at2qu"
	    />

	
</LinearLayout>